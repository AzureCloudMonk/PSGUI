<Window x:Class="PSGUI.UserInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserInput" Height="140" Width="300" WindowStyle="ToolWindow"  WindowStartupLocation="CenterScreen">
    <Grid >
        <Label Content="Name" HorizontalAlignment="Left" Margin="12,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbInput" HorizontalAlignment="Left" Height="23" Margin="55,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="211"/>
        <Button x:Name="bOK" Content="OK" HorizontalAlignment="Left" Margin="111,62,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="bCancel" Content="Cancel" HorizontalAlignment="Left" Margin="191,62,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
